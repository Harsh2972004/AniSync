# Server Environment Variables
# Copy this file to .env and fill in your values

# Node Environment
# Options: development, production
NODE_ENV=development

# Server Configuration
PORT=3000

# MongoDB Connection String
# For local: mongodb://localhost:27017/anisync
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/anisync
MONGO_URI=mongodb://localhost:27017/anisync

# Session Secret - Generate a strong random string
# Use: openssl rand -base64 32
SESSION_SECRET=your_session_secret_here

# JWT Secret - Generate a strong random string
# Use: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here

# Client URL - Your frontend URL
# For development: http://localhost:5173
# For production: https://your-frontend-domain.com
CLIENT_URL=http://localhost:5173

# API URL - Your backend URL (for CORS)
# For development: http://localhost:3000
# For production: https://your-backend-domain.com
API_URL=http://localhost:3000

# Email Configuration (Gmail)
MAIL_USER=your_email@gmail.com
MAIL_PASS=your_app_password

# Google OAuth Credentials
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/user/auth/google/anisync

# AniList OAuth Credentials
# Get from: https://anilist.co/settings/developer
ANILIST_CLIENT_ID=your_anilist_client_id
ANILIST_CLIENT_SECRET=your_anilist_client_secret
ANILIST_CALLBACK_URL=http://localhost:3000/api/user/auth/anilist/anisync
